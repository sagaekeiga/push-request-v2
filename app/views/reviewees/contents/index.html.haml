.col-xs-12
  .container
    .row
      .content-show-wrapper
        .page-header
          .pull-right
            - if @repo.loading?
              %i.fas.fa-hourglass-start
              &nbsp;
              = t("reviewees.repos.index.#{@repo.status}")
            - else
              = link_to t("reviewees.repos.index.#{@repo.status}"),
                reviewees_repo_path(@repo),
                method: :put,
                class: "btn #{t("views.statuses.buttons.#{@repo.status}")}"
          %h3= @repo.full_name
        = render 'reviewees/shared/repos/tab', repo: @repo
        .panel.panel-default
          .panel-heading
            %b.text-right= l @repo.created_at
          .table-wrapper
            %table.table.table-hover
              %tbody
                = render @dir_or_files, repo: @repo
        - if @readme
          .panel.panel-default
            .panel-heading= @readme['name']
            .panel-body
              .md-wrapper
                = markdown(decode_by_base64(@readme['content']))
= javascript_pack_tag 'update-resource'
