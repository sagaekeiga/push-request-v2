.col-xs-12
  .container
    .row
      .content-show-wrapper
        .page-header
          %h4= @content.path
        - if @content.dir?
          = render 'dirs', resource: @content, dir_or_files: @dir_or_files, readme: @readme, res_readme: nil
        - else
          .panel.panel-default
            .panel-heading
              %b= t 'views.bytes', byte: @content.size
            .table-wrapper
              %table
                %thead
                  %tr
                    %th{ scope: 'col' }
                - if @content && @file
                  - decode_by_base64(@file['content'])&.each_line&.with_index do |line, index|
                    %tbody
                      %tr
                        %td.index= index
                        %td.file-code= coderay(line, @content.path)
